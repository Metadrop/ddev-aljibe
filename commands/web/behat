#!/bin/bash
#ddev-generated
## Description: Launch behat tests
## Usage: behat
## Example: ddev behat

FOLDER=${1:-local}
ARGS=${*:2}

# Behat command warning
if [ -n "$2" ]; then
  if [[ "$2" != -* ]]; then
    echo -e "\e[41m\e[97m** \e[1mWarning!!\e[0m\e[41m\e[97m looks like the second parameter is not a behat option. Since Aljibe 0.2.2, profile is not longer the second parameter.\e[0m\n"
    echo -e "\e[41m\e[97m** \e[1mExample:\e[0m\e[41m\e[97m ddev behat local --profile=default\e[0m"
    exit 1
  fi
fi

behat --colors --config=/var/www/html/tests/behat/$FOLDER/behat.yml $ARGS
